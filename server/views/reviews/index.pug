extends ../layout/index 

block content
    main.container.mt-5
        h1.text-center.mb-5  #{page}

        .row
            .col-md-12
                blockquote.text-center Read about our Customer and their Experiences
                include ../layout/partials/reviews
                
            .col-lg-12
                h2.text-center Add a review, how are we doing!!
                if(errors)
                    each error in errors
                        .alert.alert-danger.text-center=error.alertMessage
                .row.justify-content-center
                    .col-md-8
                        form(action="/reviews", method="POST")
                            .form-group
                                label(for="name") Name
                                input(id="name", class="form-control", name="name", type="text", placeholder="Your name", value=name)
                            .form-group
                                label(for="email") Email
                                input(id="email" , class="form-control", name="email", type="text", placeholder="Your email", value=email)
                            form-group
                                label(for="message") Message
                                textarea#message(name="message", rows="3", class="form-control" placeholder="Your messages")=message
                            input.btn.btn-success.btn-block(type="submit", value='Add')