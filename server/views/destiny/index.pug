extends ../layout/index 

block content
    main.container.mt-5
        .row
            .col.md-5
                img(src=`/img/destinos_${trip.image}_ln.jpg`, class="img-fluid")
            .col-md-7
                h1 #{trip.title} 
                 p
                    i.fas.fa-calendar-alt
                    |  Depart Date: #{trip.depart_date} --  Return Date: #{trip.return_date}
                p
                    i.fas.fa-dollar-sign
                    |  #{trip.price} USA Dollars
                p
                    i.fas.fa-users
                    |  #{trip.available} Available
                p= trip.description